<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./partials/head'); %>
    </head>
    <body id="page-top">
        <!-- Navigation-->
        <nav class="navbar navbar-expand-lg fixed-top" id="mainNav">
            <%- include('./partials/topmenu'); %>
        </nav>


        <!-- About Section-->
        <content>
            <section class="page-section main-content mt-3 masthead-jr" id="about">
                <div class="container">
                    <!-- About Section Heading-->
                    <div class="divider-custom">
                        <div class="divider-custom-line divider-bg-color"></div>
                        <div class="divider-custom-icon"><i class="fas fa-school divider-color"></i></div>
                        <div class="divider-custom-line divider-bg-color"></div>
                    </div>
    
                    <!-- About Section Content-->
                    <!--
                    <div class="row">
                        <div class="col-lg-4 ml-auto"><p class="lead">About the site</p></div>
                        <div class="col-lg-4 mr-auto"><p class="lead">About me</p></div>
                    </div>
                    -->
                    <!-- About Section Button-->
                    <div class="text-left mt-4">
                        <% if(!!locals.message){ %>
                            <div class="alert-message alert-message-success" role="alert">
                                <h3 ><%= message %></h3>
                            </div>
                            
                        <% } %>
                        <div id="story1" class="row justify-content-left">
                            <div class="col-lg-7">
                                <h2>Welcome!</h2>
                                <% if(locals.redirect) { %>
                                <h4>Now get started by <a href='/signIn?redirect=<%- locals.redirect %>'>Signing In</a>!</h4>
                                <% } else { %>
                                <h4>Now get started by <a href='/signIn'>Signing In</a>!</h4>
                                <% } %>
                                
                                <p></p>
                            </div>
                            <div class="col-lg-5">
                                <!--<img src="/assets/img/henry-ix-trans-circle-800x800.png" class="img-fluid" /> -->
                                <img src="/assets/img/robot-fun.png" class="img-fluid" />
                                
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </content>

        <!-- Footer-->
        <%- include('./partials/footer'); %>
        <!-- Copyright Section-->
        <%- include('./partials/copyright'); %>
        <!-- Scroll to Top Button (Only visible on small and extra-small screen sizes)-->
        <div class="scroll-to-top d-lg-none position-fixed">
            <a class="js-scroll-trigger d-block text-center text-white rounded" href="#page-top"><i class="fa fa-chevron-up"></i></a>
        </div>
        <%- include('./partials/jsincludes'); %>
    </body>
</html>
